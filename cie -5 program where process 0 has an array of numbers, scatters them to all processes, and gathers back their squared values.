#include <stdio.h>
#include <mpi.h>

int main(int argc, char *argv[]) {
    int rank, size;
    int arr[4], recv_val, squared, result[4];

    MPI_Init(&argc, &argv);
    MPI_Comm_rank(MPI_COMM_WORLD, &rank);
    MPI_Comm_size(MPI_COMM_WORLD, &size);

    if (rank == 0) {
        arr[0] = 1;
        arr[1] = 2;
        arr[2] = 3;
        arr[3] = 4;
    }

    MPI_Scatter(arr, 1, MPI_INT, &recv_val, 1, MPI_INT, 0, MPI_COMM_WORLD);

    squared = recv_val * recv_val;
    printf("Process %d got %d â†’ squared = %d\n", rank, recv_val, squared);

    MPI_Gather(&squared, 1, MPI_INT, result, 1, MPI_INT, 0, MPI_COMM_WORLD);

    if (rank == 0) {
        printf("Gathered result at Process 0: ");
        for (int i = 0; i < size; i++)
            printf("%d ", result[i]);
        printf("\n");
    }

    MPI_Finalize();
    return 0;
}
